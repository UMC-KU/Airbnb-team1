<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/item_detail_info_vp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/item_detail_info_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_detail_info_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_info_vp">

        <TextView
            android:id="@+id/item_detail_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_detail_info_nation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_nation"
            app:layout_constraintStart_toStartOf="@id/item_detail_info_name_tv"
            app:layout_constraintTop_toBottomOf="@id/item_detail_info_name_tv"/>
        <TextView
            android:id="@+id/item_detail_info_period_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_period"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="@id/item_detail_info_nation_tv"
            app:layout_constraintTop_toBottomOf="@id/item_detail_info_nation_tv"/>
        <TextView
            android:id="@+id/item_detail_info_price_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_price_per_day"
            app:layout_constraintTop_toBottomOf="@id/item_detail_info_period_tv"
            app:layout_constraintStart_toStartOf="@id/item_detail_info_period_tv"/>

        <TextView
            android:id="@+id/item_detail_info_divider_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/item_detail_info_price_one_tv"
            app:layout_constraintStart_toEndOf="@id/item_detail_info_price_one_tv"
            app:layout_constraintEnd_toStartOf="@id/item_detail_info_price_all_tv"/>

        <TextView
            android:id="@+id/item_detail_info_price_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_price_all"
            android:layout_marginStart="10dp"

            app:layout_constraintStart_toEndOf="@id/item_detail_info_divider_tv"
            app:layout_constraintTop_toTopOf="@id/item_detail_info_divider_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>