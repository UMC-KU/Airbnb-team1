<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/profile_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_profileimage_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="지수"
                    android:textColor="@color/black"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_click_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="프로필 보기"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="412dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:src="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="36dp"
                    android:text="계정 관리"
                    android:textColor="@color/black"
                    android:textSize="26sp" />


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_info_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"

                        android:src="@drawable/btm_nav_profile_off" />

                    <TextView
                        android:id="@+id/profile_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="개인 정보"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_cash_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_cash" />

                    <TextView
                        android:id="@+id/profile_cash_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="결제 및 대금 수령"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="142dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_trans_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_character" />

                    <TextView
                        android:id="@+id/profile_trans_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="번역"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="238dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_alarm_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_alarm" />

                    <TextView
                        android:id="@+id/profile_alarm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="알림"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="238dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_security_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_locker" />

                    <TextView
                        android:id="@+id/profile_security_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="개인정보 보호 및 공유"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="호스팅"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_room_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_add_house" />

                    <TextView
                        android:id="@+id/profile_room_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="숙소 등록하기"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="168dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_activity_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_snorkeler" />

                    <TextView
                        android:id="@+id/profile_activity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="체험 호스팅하기"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="152dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="36dp"
                    android:text="추천 및 여행 크레딧"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_host_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_present" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_host_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:text="호스트 초대하기"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:text="호스트를 새로 추천할 때마다 19,412의 크레딧을
                            받으세요."
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="36dp"
                    android:text="도구"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/fragment_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_tool_iv"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_book" />

                    <TextView
                        android:id="@+id/profile_tool_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:text="시리 설정"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="152dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/btn_arrow_black_1" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>